<!-- boilerplate code to use -->
<% layout("./layouts/boilerplate.ejs") -%>
<div class="row mt-4">
  <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <br />
    <form
      method="post"
      action="/listings/<%= listing.id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <!-- listing[parameter] is used to make a listing object with key value pairs -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          class="form-control"
          value="<%= listing.title %>"
          type="text"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please enter a title.</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          type="text"
          required
        >
<%= listing.description %></textarea
        >
        <div class="valid-feedback">Description looks good!</div>
        <div class="invalid-feedback">Please enter description.</div>
      </div>
      <div class="row">
        <div class="mb-3 col-6 col-md-6">
          <label class="form-label">Original Listing Image</label><br />
          <img src="<%= originalImageUrl %>" />
        </div>
        <div class="mb-3">
          <label for="image.url" class="form-label">Upload New Image</label>
          <input name="listing[image]" class="form-control" type="file" />
        </div>
      </div>
      <div class="row">
        <div class="mb-3 col-4 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            class="form-control"
            value="<%= listing.price %>"
            type="number"
            step="1"
            required
          />
          <div class="valid-feedback">Price looks good!</div>
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>
        <div class="mb-3 col-8 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            class="form-control"
            value="<%= listing.country %>"
            type="text"
            required
          />
          <div class="valid-feedback">Country looks good!</div>
          <div class="invalid-feedback">Please enter a valid country.</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          class="form-control"
          value="<%= listing.location %>"
          type="text"
          required
        />
        <div class="valid-feedback">Loaction looks good!</div>
        <div class="invalid-feedback">Please enter a valid location.</div>
      </div>
      <button class="btn btn-dark add-btn mt-2">Edit Listing</button>
      <br /><br /><br /><br />
    </form>
  </div>
</div>
